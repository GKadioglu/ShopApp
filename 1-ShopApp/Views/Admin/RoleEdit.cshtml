@model _1_ShopApp.Models.RoleDetails

<h1 class="h3">Edit Role</h1>
<hr>

<div class="row">
    <div class="col-md-12">

        <form asp-controller="Admin" asp-action="RoleEdit" method="post">
            <input type="hidden" name="RoleId" value="@Model.Role.Id">
            <input type="hidden" name="RoleName" value="@Model.Role.Name">
            <h6 class="bg-info text-white p-1">Add To @Model.Role.Name</h6>
            <table class="table table-bordered table-sm">
                @if(Model.NonMembers.Count() == 0)
                {
                    <tr>
                        <td colspan="2">Bütün Kullanıcılar Role Ait</td>
                    </tr>
                }
                else
                {
                    @foreach(var item in Model.NonMembers)
                    {
                        <tr> 
                            <td>@item.UserName</td>
                            <td style="width 150px;">
                                <input type="checkbox" name="IdsToAdd" value="@item.Id">
                            </td>
                        </tr>
                    }
                }
            </table>
            
            <hr>

            <h6 class="bg-info text-white p-1">Remove from @Model.Role.Name</h6>
            <table class="table table-bordered table-sm">
                @if(Model.Members.Count() == 0)
                {
                    <tr>
                        <td colspan="2">Role Ait Kullanıcı Yok.</td>
                    </tr>
                }
                else
                {
                    @foreach(var item in Model.Members)
                    {
                        <tr> 
                            <td>@item.UserName</td>
                            <td style="width 150px">
                                <input type="checkbox" name="IdsToDelete" value="@item.Id">
                            </td>
                        </tr>
                    }
                }
            </table>

            <button type="submit" class="btn btn-primary">Save Changes</button>

        </form>

    </div>
</div>