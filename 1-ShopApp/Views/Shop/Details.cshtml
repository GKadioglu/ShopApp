@model ProductDetailModel


<div class="row ">
    <div class="col-md-3">
    <img src="~/images/@Model.Products.ImageUrl" alt="Product Image" class="img-fluid">
</div>
<div class="col-md-9">
    <div class="card-body">
        <h5 class="mb-3">@Model.Products.Name</h5> <hr>

        @foreach  (var item in Model.Categories)
        {
          <a asp-controller="shop" asp-action="list" asp-route-category="@item.Url" class="btn btn-link p-0 mb-3">@item.Name</a>
        }
        <h6 class="card-text">
            <h4 class="text-primary mb-3">
            @Model.Products.Price <i class="fas fa-lira-sign"></i>
            </h4>
            <form asp-controller="Cart" asp-action="AddToCart" method="POST" class="form-inline">
                <input type="hidden" name="productId" value="@Model.Products.ProductId">
                <div class="input-group mb-3">
                    <input type="number" name="quantity" class="form-control" value="1" min="1" step="1" style="max-width: 250px;">
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-primary ms-2">
                             <i class="fas fa-cart-plus"></i>Add to Cart
                        </button>
                    </div>
                </div>
            </form>
    

        </h6>


    </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <p class="p-3">@Html.Raw(Model.Products.Description)</p>
    </div>
</div>
